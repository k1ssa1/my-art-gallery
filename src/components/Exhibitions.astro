        const summerRunwaySubtitlePos = summerRunwaySubtitle.getBoundingClientRect()
        const summerRunwayDatePos = summerRunwayDate.getBoundingClientRect()
        const summerRunwayDescPos = summerRunwayDesc.getBoundingClientRect()

        const blackWhiteImagePos = blackWhiteImage.getBoundingClientRect()
        const blackWhiteTitlePos = blackWhiteTitle.getBoundingClientRect()
        const blackWhiteSubtitlePos = blackWhiteSubtitle.getBoundingClientRect()
        const blackWhiteDatePos = blackWhiteDate.getBoundingClientRect()
        const blackWhiteDescPos = blackWhiteDesc.getBoundingClientRect()

        const gothicImagOnePos = gothicImageOne.getBoundingClientRect()
        const gothicImagTwoPos = gothicImageTwo.getBoundingClientRect()
        const gothicTitlePos = gothicTitle.getBoundingClientRect()
        const gothicSubtitlePos = gothicSubtitle.getBoundingClientRect()
        const gothicDatePos = gothicDate.getBoundingClientRect()
        const gothicDescPos = gothicDesc.getBoundingClientRect()


        if(titlePosition.top < window.innerHeight && titlePosition.bottom > 0 && !hasAnimatedTitle){
            hasAnimatedTitle = true;
            anime({
                targets: "#exhibition_title",
                opacity: [0, 1],
                duration: 2000,
                easing: "easeOutExpo",
                delay: 600,
            })
        }

        if(firstDescriptionPos.top < window.innerHeight && firstDescriptionPos.bottom > 0 && !hasAnimatedFirstDesc){
