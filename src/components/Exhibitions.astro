        }

        if(summerRunwayImagePos.top < window.innerHeight && summerRunwayImagePos.bottom > 0 && !hasAnimatedSummerRunwayImage){
            hasAnimatedSummerRunwayImage = true;
            anime({
                targets: "#summer_runway_image",
                opacity: [0, 1],
                duration: 2000,
                easing: "easeOutExpo",
                delay: 1000,
                translateX: '50px'
            })
        }

        if(summerRunwayTitlePos.top < window.innerHeight && summerRunwayTitlePos.bottom > 0 && !hasAnimatedSummerRunwayTitle){
            hasAnimatedSummerRunwayTitle = true;
            anime({
                targets: "#summer_runway_title",
                opacity: [0, 1],
                duration: 2000,
