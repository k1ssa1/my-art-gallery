            })
        }

        if(bohemianReverieDescPos.top < window.innerHeight && bohemianReverieDescPos.bottom > 0 && !hasAnimatedBohemainReverieDesc){
            hasAnimatedBohemainReverieDesc = true;
            anime({
                targets: "#bohemian_reverie_description",
                opacity: [0, 1],
