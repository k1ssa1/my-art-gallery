    display: grid;
    grid-template-columns: auto;
    margin: 6rem 0 0;
    background-color: #fff;
    color: #010101;
    padding: 4rem 0;
}

.main_container_header{
    display: grid;
    grid-template-columns: auto;
    justify-content: center;
}

