                delay: 1200
            })
        }

        if(bohemianReverieDatePos.top < window.innerHeight && bohemianReverieDatePos.bottom > 0 && !hasAnimatedBohemainReverieDate){
            hasAnimatedBohemainReverieDate = true;
            anime({
                targets: "#bohemian_reverie_date",
