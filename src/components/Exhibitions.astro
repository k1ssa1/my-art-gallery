        }

        if(blackWhiteDatePos.top < window.innerHeight && blackWhiteDatePos.bottom > 0 && !hasAnimatedBlackWhiteDate){
            hasAnimatedBlackWhiteDate = true;
            anime({
                targets: "#black_white_date",
                opacity: [0, 1],
