                delay: 1000,
            })
        }

        if(summerRunwaySubtitlePos.top < window.innerHeight && summerRunwaySubtitlePos.bottom > 0 && !hasAnimatedSummerRunwaySubtitle){
            hasAnimatedSummerRunwaySubtitle = true;
            anime({
                targets: "#summer_runway_subtitle",
