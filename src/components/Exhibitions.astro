            })
        }

        if(gothicImagTwoPos.top < window.innerHeight && gothicImagTwoPos.bottom > 0 && !hasAnimatedGothicImageTwo){
            hasAnimatedGothicImageTwo = true;
            anime({
                targets: "#gothic_image_two",
                opacity: [0, 1],
